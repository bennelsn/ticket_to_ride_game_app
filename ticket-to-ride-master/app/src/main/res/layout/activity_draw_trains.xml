<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="210dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/black"
        android:id="@+id/train_card_five"
        tools:ignore="ContentDescription"
        android:layout_alignTop="@+id/train_card_three"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="74dp" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="210dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/black"
        android:id="@+id/train_card_one"
        tools:ignore="ContentDescription"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="210dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/black"
        android:id="@+id/train_card_two"
        android:contentDescription=""
        tools:ignore="ContentDescription"
        android:layout_below="@+id/train_card_one"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="210dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/black"
        android:id="@+id/train_card_four"
        android:contentDescription=""
        tools:ignore="ContentDescription"
        android:layout_below="@+id/train_card_three"
        android:layout_toEndOf="@+id/train_card_one" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="210dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/black"
        android:id="@+id/train_card_three"
        tools:ignore="ContentDescription"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/train_card_one" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="210dp"
        app:srcCompat="@drawable/topdeck"
        android:id="@+id/train_card_deck"
        android:scaleType="fitCenter"
        tools:ignore="ContentDescription"
        android:layout_below="@+id/train_card_five"
        android:layout_toEndOf="@+id/train_card_four" />


</RelativeLayout>