<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="20dp">

        <TextView
            android:id="@+id/drawDestInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Pick at least two cards"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

        <ImageButton
            android:id="@+id/destCard1"
            android:layout_width="250dp"
            android:layout_height="175dp"
            android:scaleType="fitCenter"
            android:layout_alignParentTop="true"
            android:layout_below="@id/drawDestInstructions"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/bos_mia" />

        <ImageButton
            android:id="@+id/destCard2"
            android:layout_width="250dp"
            android:layout_height="175dp"
            android:scaleType="fitCenter"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/destCard1"
            android:layout_marginLeft="40dp"
            android:layout_below="@id/drawDestInstructions"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/bos_mia" />

        <ImageButton
            android:id="@+id/destCard3"
            android:layout_width="250dp"
            android:layout_height="175dp"
            android:scaleType="fitCenter"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/destCard2"
            android:layout_marginLeft="40dp"
            android:layout_below="@id/drawDestInstructions"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/bos_mia" />

        <Button
            android:text="Confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/draw_destinations_confirm"
            android:layout_below="@+id/destCard2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
