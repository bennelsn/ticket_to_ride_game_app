<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.a340team.tickettoride">

    <!-- To auto-complete the email text field in signinogin form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="view.LoginActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="view.GameSelectionActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="view.CreateGameActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="view.GameLobbyActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="view.GameActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="view.DrawTrainCardsActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="view.GameInfoActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="view.DrawDestinationsActivity"
            android:screenOrientation="landscape" />
        <activity android:name="view.ChatActivity"
            android:screenOrientation="landscape" />
        <activity android:name="view.GameOverActivity"
            android:screenOrientation="landscape" />
        <activity android:name="view.ServerDownActivity"
            android:screenOrientation="landscape" />
    </application>

</manifest>